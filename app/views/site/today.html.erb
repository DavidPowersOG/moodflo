<h3><%= Time.now.strftime("%b %d, %Y") %></h3>

<% @lists.each do |list| %>
<div class="card" style="width: 300px;">
  <div class="card-divider">
    	<h4><%=list.title %></h4>
  </div>
  <div class="card-section">
		<ul>
		<% list.activities.each do |activity| %>
			<li><%=activity.title %></li>
		<% end %>
		</ul>
	</div>
<% end %>
